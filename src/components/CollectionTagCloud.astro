---
import '../styles/tagcloud.css';
import { getCollection } from "astro:content";
const { collectionName } = Astro.props;
const allPosts = await getCollection(collectionName);
const tags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];
---
<div class="tags">
    {tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>
